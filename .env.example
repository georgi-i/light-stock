# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development  # Use 'production' on server
SECRET_KEY=your-secret-key-change-this-in-production  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Database
# Development: sqlite:///ims.db
# Production: sqlite:////home/ims/app/instance/ims.db
DATABASE_URL=sqlite:///ims.db

# Security
SECURITY_PASSWORD_SALT=your-password-salt-change-this
SECURITY_TOTP_SECRETS={"1": "your-totp-secret-change-this"}

# Session
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=1800

# Email (for password reset - configure if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# Application Settings
DEFAULT_LANGUAGE=en
ITEMS_PER_PAGE=20
LOW_STOCK_THRESHOLD=10
